[flake8]
ignore =
#         is too complex
          C901,
#         colons should not have any space before them
	  E203,
#	  line too long
	  E501,
# 	  local variable is assigned but never used
	  F841,
#	  line break before binary operator
	  W503
exclude =
    .git,
    __pycache__,
    docs/source/conf.py,
    build,
    dist
max-complexity = 10
max-line-length = 79
